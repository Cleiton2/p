  max-width: 700px;
  margin: 20px auto;
  background-color: #f0f0f0;
  border-radius: 10px;
  overflow: hidden;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  padding: 20px;
}

.media-container {
  position: relative;
  padding-top: 50%;
  overflow: hidden;
}

#slideshowImage {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: contain;
}

